{
  "extends": ["next/core-web-vitals", "eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier", "plugin:storybook/recommended"],
  "ignorePatterns": ["*.config.js"],
  "rules": {
    "@typescript-eslint/no-var-requires": "off", // tailwind.configでのrequire許可
    "@next/next/no-img-element": "off", // next/image以外も利用を許可
    "@typescript-eslint/no-empty-interface": "off", // jest関連で利用
    "@typescript-eslint/no-namespace": "off" // jest関連で利用
  }
}
